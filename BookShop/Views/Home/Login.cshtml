
@{
    ViewData["Title"] = "Login";
}



<form action="/Home/Login" method="post">
    <label>Username</label>
    <input name="username" />
    <br />
    <label>Password</label>
    <input name="password" />
    <br />
    <button type="submit">Login</button>
</form>
@if (ViewBag.Message != null)
{
    <p style="color: red;">@ViewBag.Message</p>
}